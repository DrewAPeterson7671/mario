<div class="review-card">
  <div class="review-card-flex">
    <div class="review-box1">

      <%= render partial: "shared/review_avatar", locals: { user: user, review: review } %>

    </div>
    <div class="review-box2">
      <p><%= link_to product.name, product_path(product) %>
      <%= ' from ' %>
      <%= product.country %></p>
    </div>
    <div class="review-box3">
      <p>On <%= review.created_at.strftime('%m-%d-%Y') %></p>
    </div>
  </div>
    <div class="review-stars"> 

    <%= render partial: "shared/review_stars", locals: { review: review.rating } %>

    </div>
  <div class="review-index-text">
    <p><%= review.content_body  %></P>
    <div></div>

      <%= render partial: "shared/product_image", locals: { product: product } %>

  </div>
</div> 