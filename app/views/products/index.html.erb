<h1>Our Products</h1>

<% if @products.any? %>
  <h2>All Products</h2>
  <div class="products">

  <%= render "products/product-card" %>

  </div>
<% else %>
  <p>There are no products yet.</p>
<% end %>

<% if current_user && current_user.admin %>
  <h3>Admin Only</h3>
  <p><%= link_to "Create new product", new_product_path %></p>
<% end %>

<%= will_paginate @products %>