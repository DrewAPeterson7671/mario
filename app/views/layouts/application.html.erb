<!DOCTYPE html>
<html>
  <head>
    <title>Mario's Specialty Foods</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render "shared/header" %>
    <%= render "shared/navbar" %>

    <div class="container">

      <div class="flash-wrap">
        <%= content_tag(:p, notice, class: 'flash') if notice %>
        <%= content_tag(:p, alert,  class: 'flash' ) if alert  %>
      </div>

      <%= yield %>

    </div>
  </body>
</html>
