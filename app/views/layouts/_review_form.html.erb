<%= render "layouts/errors_reviews", :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :content_body %>
  <%= f.text_area :content_body %><br>
    <%= f.label :rating %>
  <div class='rating'>
    <%= f.radio_button(:rating, 5) %>
    <%= f.label(:rating_5, '☆') %>
    <%= f.radio_button(:rating, 4) %>
    <%= f.label(:rating_4, '☆') %>
    <%= f.radio_button(:rating, 3) %>
    <%= f.label(:rating_3, '☆') %>
    <%= f.radio_button(:rating, 2) %>
    <%= f.label(:rating_2, '☆') %>
    <%= f.radio_button(:rating, 1) %>
    <%= f.label(:rating_1, '☆') %>
  </div>


  <p><%= f.submit %></p>
  <% end %>
