<div class="center">
  <h1>Sign in</h1>
<%= form_tag signin_path do %>
  <div class="mobile-login">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Sign in", class: "btn btn-success" %>
  </div>
<% end %>
</div>
